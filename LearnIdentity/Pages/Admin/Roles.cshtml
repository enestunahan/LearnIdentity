@page
@model LearnIdentity.Pages.Admin.RolesModel
@{
    Layout = "Shared/_AdminLayout";
}

<h3>Roller</h3>
<hr />
<table class="table table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol ismi</th>
        <th>Rol Sil</th>
        <th>Rol Güncelleme</th>
    </tr>

    @foreach (var item in Model.Roles)
    {
        <tr>

            <th>@item.Id</th>
            <th>@item.Name</th>
            <th>
                <form asp-route-id="@item.Id" method="post">
                    <button class="btn btn-warning" type="submit">Sil</button>
                </form>
            </th>
            <th> <a class="btn btn-info" asp-route-id="@item.Id" asp-page="/Admin/UpdateRole">Güncelle</a></th>
        </tr>

    }
</table>

<a  asp-page="/Admin/CreateRole" class="btn btn-info">Role Oluştur</a> 