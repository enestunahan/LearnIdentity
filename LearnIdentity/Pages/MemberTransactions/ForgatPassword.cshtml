@page
@model LearnIdentity.Pages.MemberTransactions.ForgatPasswordModel
@{
}


<div class="row">


@if (TempData["result"].ToString() =="success")
{
    <div class="col-md-4 alert alert-info">
        <p> Şifre sıfırlama bağlantısı mail adresinize gönderilmiştir</p>
    </div>
}
else
{
      <div class="col-md-4">
        <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.Email" class="control-label"></label>
                <input asp-for="Model.Email" class ="form-control" />
                <span asp-validation-for="Model.Email" class="text-danger"></span>
            </div>

             <div class="form-group">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>

        </form>
    </div>

}
</div>
